# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to git

# Firebase Configuration for Production
VITE_FIREBASE_API_KEY=your-production-firebase-api-key
VITE_FIREBASE_APP_ID=your-production-firebase-app-id

# Google OAuth2 Client ID for Calendar API access
VITE_GOOGLE_OAUTH_CLIENT_ID=your-production-google-oauth-client-id.apps.googleusercontent.com

# OpenAI API Key for AI Chat functionality
# SECURITY: This should be set via environment variables in your deployment platform
VITE_OPENAI_API_KEY=your-production-openai-api-key

# Supabase credentials (if used)
REACT_APP_SUPABASE_URL=your-production-supabase-url
REACT_APP_SUPABASE_ANON_KEY=your-production-supabase-anon-key

# Production settings
NODE_ENV=production
PUBLIC_URL=https://your-domain.com