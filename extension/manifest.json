{
  "manifest_version": 3,
  "name": "Focus Time Tracker",
  "version": "1.0.0",
  "description": "Track website usage time and block distracting sites during focus sessions. Needs access to all sites.",
  "homepage_url": "https://make10000hours.com",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "webNavigation",
    "favicon",
    "idle"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: chrome-extension:; connect-src 'self'; object-src 'none';"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/MessageQueueManager.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Focus Time Tracker",
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg", 
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  
  "options_page": "options/options.html",
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "focus_blocking_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html", 
        "blocked.js", 
        "icons/*", 
        "components/*",
        "utils/dateUtils.js",
        "assets/fonts/*.woff2",
        "assets/fonts/*.woff",
        "assets/fonts/*.ttf",
        "assets/fonts/fonts.css",
        "assets/icons/*.woff2",
        "assets/icons/*.woff",
        "assets/icons/remixicon.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "externally_connectable": {
    "matches": [
      "https://make10000hours.com/*",
      "https://www.make10000hours.com/*",
      "http://localhost:*/*",
      "https://localhost:*/*"
    ]
  }
} 